{{#if backlink}}
  <nav class="header__nav header__nav--left">
    <a href="{{backlink}}">
      <img 
        src="../assets/back.svg"
        class="header__icon header__icon--back">
      {{#if inTrainingMode}}
        <h1 class="header__title">{{deckTitle}}</h1>    
      {{else}}
        <div class="logo logo--min">
          <img src="../assets/index-card-icon.svg" 
            alt="flipcards" 
            class="logo__icon">
          <h1 class="logo__title logo__title--min">FLIPCARDS</h1>
        </div>
      {{/if}}
    </a>
  </nav>
{{/if}}
{{#if inEditMode}}
  <input 
    class="header__title header__title--editable"
    value="{{deckTitle}}">
{{else}}
  <div class="logo">
    <img src="../assets/index-card-icon.svg" 
      alt="flipcards" 
      class="logo__icon logo__icon--large">
    <h1 class="logo__title">FLIPCARDS</h1>
  </div>
{{/if}}
  <nav class="header__nav header__nav--right">
    {{#if inEditMode}}
    <img 
      src="../assets/settings.svg"
      class="header__icon header__icon--settings">
    <div class="button button--nav">
      <img src="../assets/settings.svg">  
      <p>SETTINGS</p>
    </div>
    {{/if}}
  </nav>